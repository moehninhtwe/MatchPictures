<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/screen_margin_left"
    android:layout_marginRight="@dimen/screen_margin_right"
    android:layout_marginTop="@dimen/screen_margin_top"
    tools:context=".view.MainActivity">
  <ProgressBar
      android:id="@+id/pb_loading"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent"
  />
  <android.support.v7.widget.AppCompatTextView
      android:id="@+id/tv_total_flip"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="@dimen/text_size"
      android:textColor="@color/textColor"
      app:layout_constraintBottom_toTopOf="@+id/rc_photos"/>
  <android.support.v7.widget.AppCompatButton
      android:id="@+id/btn_reset"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="80dp"
      android:text="@string/reset"
      android:textColor="@android:color/white"
      android:backgroundTint="@color/colorAccent"
      app:layout_constraintLeft_toRightOf="@id/tv_total_flip"/>
  <android.support.v7.widget.AppCompatTextView
      android:id="@+id/tv_done_msg"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="@string/done"
      android:textSize="@dimen/text_size"
      android:visibility="gone"
      android:textColor="@color/textColor"
      app:layout_constraintBottom_toTopOf="@+id/rc_photos"
      app:layout_constraintTop_toBottomOf="@id/tv_total_flip"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintHorizontal_bias="0.5"/>
  <android.support.v7.widget.AppCompatTextView
      android:id="@+id/tv_no_data"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:text="@string/something_went_wrong"
      android:visibility="gone"
      android:textColor="@color/textColor"
      app:layout_constraintTop_toBottomOf="@+id/tv_total_flip"/>
  <android.support.v7.widget.RecyclerView
      android:id="@+id/rc_photos"
      android:layout_width="wrap_content"
      android:layout_height="match_parent"
      android:layout_marginTop="90dp"
      app:layout_constraintTop_toBottomOf="@+id/tv_total_flip"
  />
</android.support.constraint.ConstraintLayout>